<div class="new-friend-container">
  <div class="new-friend">
  <div class="profile-edit-picture-master">
    <img class="profile-edit-picture" src="https://res.cloudinary.com/djr22sgp3/image/upload/v1677517298/Boris_Johnson_official_portrait__cropped_16.09.10_hkfyil.png">
  </div>
  <h3 class="new-title">Add an Activity</h3>
    <%= simple_form_for [@friend] do |f| %>
        <%= f.input :name, placeholder: 'Enter a name' %>
        <%= f.input :age, placeholder: '+18' %>
        <%= f.input :email, placeholder: 'name@friend.com' %>
        <%= f.input :location, placeholder: 'london' %>
        <%= f.input :price, placeholder: '1.5' %>
        <%= f.input :description, placeholder: 'I like the cats' %>
        <%= f.input :photo_url, as: :file %>
        <%= f.submit class: "more-btn", value: "update" %>
    <% end %>
  </div>
</div>
