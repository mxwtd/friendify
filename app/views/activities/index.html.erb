<% if user_signed_in? %>
  <div class="friends-grid">
  <div>
    <h2 class="grid-title">Find new Friends</h2>
      <div class="grid-container">
        <% @activities.each do |activity| %>
          <%= link_to activity_path(activity), class:"text-decoration-none" do %>
            <div class="grid-item">
              <div class="grid-item">
                <div class="card-info-banner">
                  <p class="friend-names"><%= User.find(activity.user_id).name %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="center-btn">
    <%= button_to "Add Friends", activities_new_path,
        :class => "more-btn", :method => :get %>
  </div>
  <% else %>
    <%= render 'pages/banner' %>
<% end %>

